{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}

